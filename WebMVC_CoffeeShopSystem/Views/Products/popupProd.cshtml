<div class="col-md-4 align-self-center">
    <div class="quickview d-flex align-items-center justify-content-center">
        <div class="quickview__thumb">
            <img src="~/Content/assets/images/products/pp-1.png" alt="">
        </div>
    </div>
</div>
<div class="col-md-8">
    <div class="viewcontent">
        <div class="viewcontent__header">
            <h2>@ViewBag.detailsProd.title</h2>
            <a class="view_close product-p-close" href="javascript:void(0)"><i class="fal fa-times"></i></a>
        </div>
        <div class="viewcontent__rating">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fal fa-star"></i>
        </div>
        <div class="viewcontent__price">
            @if (ViewBag.detailsProd.finalPrice != ViewBag.detailsProd.price)
            {
                <h4 class="price"> $@ViewBag.detailsProd.finalPrice / <span style="font-size: 20px;"><del>$@ViewBag.detailsProd.price</del></span></h4>
            }
            else
            {
                <h3 class="price"> $@ViewBag.detailsProd.finalPrice </h3>
            }
        </div>
        <div class="viewcontent__stock">
            <h4>Available :<span> In stock</span></h4>
        </div>
        <div class="viewcontent__details">
            <p>@ViewBag.detailsProd.description</p>
        </div>
        <div class="viewcontent__action">
            <span>Qty</span>
            <input type="number" min="1" max="50" placeholder="1" value="1">
            <a class="site-btn" href="#">add to cart</a>
        </div>
        <div class="viewcontent__footer">
            <ul class="list-unstyled">
                <li>Category:</li>
            </ul>
            <ul class="list-unstyled">
                <li>@ViewBag.detailsProd.titleCate</li>
            </ul>
        </div>
    </div>
</div>