
@{
    ViewBag.Title = "Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<WebAPI_CoffeeShop.Models.ModelView.BlogView> lstBlog = ViewBag.lstBlog;
}

<main>
    <!-- breadcrumb area start -->
    <section class="breadcrumb-area pt-140 pb-140 bg_img" data-background="~/Content/assets/images/bg/breadcrumb-bg-1.jpg" data-overlay="dark" data-opacity="5">
        <div class="shape shape__1"><img src="~/Content/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
        <div class="shape shape__2"><img src="~/Content/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-12 text-center">
                    <h2 class="page-title">Cafena Blog</h2>
                    <div class="cafena-breadcrumb breadcrumbs">
                        <ul class="list-unstyled d-flex align-items-center justify-content-center">
                            <li class="cafenabcrumb-item duxinbcrumb-begin">
                                <a href="/"><span>Home</span></a>
                            </li>
                            <li class="cafenabcrumb-item duxinbcrumb-end">
                                <span>Blogs</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb area end -->
    <!-- blog area start -->
    <div class="blog-area pt-120 pb-105">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-lg-8">
                    <div class="blog__wrapper mt-none-30">
                        @if (lstBlog != null)
                        {
                            foreach (var item in lstBlog)
                            {
                                <article class="blog__post format format-image mt-30">
                                    <div class="thumb">
                                        <img src="@item.image" alt="">
                                    </div>
                                    <ul class="meta mt-20 list-unstyled d-flex align-items-center">
                                        <li><a href="#0"><i class="fal fa-comments"></i> @item.countCmt Comments</a></li>
                                        <li><a href="#0"><i class="fal fa-calendar-alt"></i> @item.createDate</a></li>
                                    </ul>
                                    <div class="content mt-10">
                                        <h2 class="title border-effect mb-10"><a href="/Blogs/Details/@item.id">@item.title</a></h2>
                                        <p>
                                            Ronec et nibh maximus, congue est eu, mattis nunc. Praesent ut quam quis quam venenatis fringilla. Morbi vestibulum id tellus mmodo mattis. Aliquam erat volutpat. Aenean accumsan id mi nec semper. Lorem ipsum.
                                        </p>
                                    </div>
                                    <div class="bottom mt-35 d-flex align-items-center">
                                        <a href="/Blogs/Details/@item.id" class="site-btn">read more</a>
                                        <div class="author d-flex align-items-center">
                                            <div class="a-thumb mr-15">
                                                @*<img src="~/Content/assets/images/author/blog-author-1.png" alt="">*@
                                            </div>
                                            <h5 class="border-effect"><a href="#0" class="name"><span style="font-size:15px;color:black">Written by: </span>@item.titleUserCreate</a></h5>
                                        </div>
                                    </div>
                                </article>
                            }
                        }
                    </div>
                    <div class="cafena-pagination mt-60">
                        <ul>
                            <li><a href="#"><span><i class="far fa-angle-double-left"></i></span></a></li>
                            <li><a href="#"><span>01</span></a></li>
                            <li><a href="#"><span class="current">02</span></a></li>
                            <li><a href="#"><span>03</span></a></li>
                            <li><a href="#"><span>...</span></a></li>
                            <li><a href="#"><span>10</span></a></li>
                            <li><a href="#"><span><i class="far fa-angle-double-right"></i></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="blog__sidebar mt-none-30">
                        <div class="widget mt-30">
                            <h2 class="title">Search Here</h2>
                            <form action="https://xpressrow.com/html/cafena/cafena/index.html" class="search-widget">
                                <input type="search" name="search" id="search" placeholder="Serach Product">
                                <button type="submit"><i class="fal fa-search"></i></button>
                            </form>
                        </div>
                        <div class="widget mt-30">
                            <h2 class="title">Categories</h2>
                            <div class="recent-posts">
                                <div class="item d-flex align-items-center">
                                    <div class="thumb">
                                        <img src="assets/images/blog/recent-posts/b-sm-1.png" alt="">
                                    </div>
                                    <div class="content">
                                        <h5 class="rp-title border-effect"><a href="blog-details.html">10 Reasons To Do A Digital Detox Challenge</a></h5>
                                        <a href="#0" class="date"><i class="fal fa-calendar-alt"></i>  24th March 2021</a>
                                    </div>
                                </div>
                                <div class="item d-flex align-items-center">
                                    <div class="thumb">
                                        <img src="assets/images/blog/recent-posts/b-sm-2.png" alt="">
                                    </div>
                                    <div class="content">
                                        <h5 class="rp-title border-effect"><a href="blog-details.html">10 Reasons To Do A Digital Detox Challenge</a></h5>
                                        <a href="#0" class="date"><i class="fal fa-calendar-alt"></i>  24th March 2021</a>
                                    </div>
                                </div>
                                <div class="item d-flex align-items-center">
                                    <div class="thumb">
                                        <img src="assets/images/blog/recent-posts/b-sm-3.png" alt="">
                                    </div>
                                    <div class="content">
                                        <h5 class="rp-title border-effect"><a href="blog-details.html">10 Reasons To Do A Digital Detox Challenge</a></h5>
                                        <a href="#0" class="date"><i class="fal fa-calendar-alt"></i>  24th March 2021</a>
                                    </div>
                                </div>
                                <div class="item d-flex align-items-center">
                                    <div class="thumb">
                                        <img src="assets/images/blog/recent-posts/b-sm-4.png" alt="">
                                    </div>
                                    <div class="content">
                                        <h5 class="rp-title border-effect"><a href="blog-details.html">10 Reasons To Do A Digital Detox Challenge</a></h5>
                                        <a href="#0" class="date"><i class="fal fa-calendar-alt"></i>  24th March 2021</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="widget border-0 p-0 mt-30">
                                <div class="widget_media_image">
                                    <img src="assets/images/blog/ad-bg-1.jpg" alt="">
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- blog area end -->

</main>

